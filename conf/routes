# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

#Gallery
GET		/gallery					controllers.GalleryControl.gallery

POST	/gallery/add				controllers.GalleryControl.add
GET		/gallery/add				controllers.GalleryControl.add
POST	/gallery/edit				controllers.GalleryControl.edit(id)

POST 	/gallery/remove				controllers.GalleryControl.remove(id)


#User
GET		/users						controllers.UserControl.users
POST	/users/add					controllers.UserControl.add
GET		/users/add					controllers.UserControl.add
GET		/users/edit/:id				controllers.UserControl.edit(id)

GET		/users/remove/:id			controllers.UserControl.remove(id)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
